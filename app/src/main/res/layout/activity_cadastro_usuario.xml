<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroUsuario"
        android:padding="16dp"
        android:orientation="vertical">

    <TextView
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="@string/nomeUser"
            android:textSize="16sp"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="116dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <EditText
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:id="@+id/txtUsuario"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <TextView
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="@string/loginCasdastro"
            android:textSize="16sp"
            android:id="@+id/textView4"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txtUsuario"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <EditText
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:id="@+id/loginCadastro"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <TextView
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/senhaUsuario"
            android:id="@+id/textView5"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/loginCadastro"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <EditText
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/txtSenhaUsuario"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/cadastrar"
            android:textSize="16sp"
            android:id="@+id/btnCadastrarUsuario"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="120dp"/>

</android.support.constraint.ConstraintLayout>