<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        >

    <!-- Label do login -->
    <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:text="@string/usuario"
            android:id="@+id/txtViewUsuario"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp"/>

    <!-- Campo de texto para o usuário digitar o login -->
    <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextLogin"
            android:inputType="textCapSentences"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/txtViewUsuario"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp"/>

    <!-- Label da senha -->
    <TextView
            android:layout_width="213dp"
            android:layout_height="wrap_content"

            android:text="@string/senha"
            android:id="@+id/textView2"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextLogin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp"/>

    <!-- Campo para o usuário digitar a senha -->
    <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextSenha"
            android:inputType="textPassword"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp"/>

    <!-- Botão para o usuário realizar o login-->
    <Button
            android:layout_width="200dp"
            android:id="@+id/buttonLogin"
            android:layout_height="wrap_content"

            android:text="@string/login"
            android:textColor="#F9F9FA"
            android:background="#3F51B5"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextSenha"
            android:layout_marginStart="104dp"/>

    <TextView
            android:id="@+id/btnUserNaoExiste"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="@string/user_n_cadastrado"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"/>

    <TextView
            android:text="Livraria Digital"
            android:layout_width="252dp"
            android:layout_height="79dp"
            android:id="@+id/textView"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:textColor="#3F51B5"
            android:layout_marginTop="204dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"
            android:padding="20dp"/>

    <ImageView
            android:layout_width="104dp"
            android:layout_height="138dp"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.498"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="11dp"
            android:id="@+id/guideline"/>

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="14dp"
            android:id="@+id/guideline2"/>

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="391dp"
            android:id="@+id/guideline4"/>

</android.support.constraint.ConstraintLayout>